container_commands:
  01_setup_swap:
    command: "bash .ebextensions/setup_swap.sh"
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsu"
    leader_only: true
  03_deps:
    command: "source /var/app/venv/*/bin/activate && pip3 install --no-cache-dir tensorflow && pip3 install hdbscan --no-build-isolation --no-cache-dir --no-binary :all:"
  04_trainTopicModel:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py trainTopicModel"
    leader_only: true
  05_migrate:
    command: "python manage.py makemigrations topicFeed && python manage.py migrate topicFeed"
    leader_only: true

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: root.settings

