container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate --fake ebdjango zero && python3 manage.py migrate"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsu"
    leader_only: true
  03_populatearticles:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py populateArticles"
  04_rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: root.settings
