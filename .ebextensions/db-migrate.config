container_commands:
  01_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsu"
    leader_only: true
  02_deps:
    command: "source /var/app/venv/*/bin/activate && pip3 install --no-cache-dir tensorflow"
    leader_only: true
  03setup_swap:
    command: "bash .ebextensions/setup_swap.sh"
  04_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations userPreferences && python3 manage.py makemigrations topicModeling && python3 manage.py migrate"
    leader_only: true


option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: root.settings

