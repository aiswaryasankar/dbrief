files:
    /usr/local/bin/populate_articles_script.sh:
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            source /var/app/venv/*/bin/activate
            python manage.py populateArticles

    /etc/cron.d/fetch_emails_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            */5 * * * * root /usr/local/bin/populate_articles_script.sh

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true