files:
    "/usr/local/bin/populateArticles.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            source /var/app/venv/*/bin/activate
            cd /var/app/current
            python manage.py populateArticles

    /etc/cron.d/populate_articles_cron:
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/populateArticles.sh

commands:
  rm_old_cron:
    command: "rm -fr /etc/cron.d/*.bak"
    ignoreErrors: true

